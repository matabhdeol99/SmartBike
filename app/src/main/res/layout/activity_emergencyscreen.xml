<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context="com.journaldev.smartbike.EmergencyScreen">

    <Button
        android:id="@+id/btEmergencyOK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="288dp"
        android:background="#FFFFFF"
        android:text="@android:string/ok"
        android:textColor="#0D5025"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btHome"
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2161AF"
            android:onClick="sendHome"
            android:text="Home" />

        <Button
            android:id="@+id/btLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#69b48b"
            android:onClick="sendLogout"
            android:text="Logout" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="261dp"
        android:layout_height="103dp"
        android:layout_marginBottom="380dp"
        android:background="#2161AF"
        android:gravity="center"
        android:text='Collision Detected! Please press "OK" within 1 minute or we will alert your emergency contact!'
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>